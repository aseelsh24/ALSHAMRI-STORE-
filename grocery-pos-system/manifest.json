  "shortcuts": [
    {
      "name": "مبيعات جديدة",
      "short_name": "مبيعات",
      "description": "بدء عملية بيع جديدة",
      "url": "/?action=new-sale",
      "icons": [
        {
          "src": "icons/sale-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "إدارة المخزون",
      "short_name": "مخزون",
      "description": "عرض وإدارة المخزون",
      "url": "/?action=inventory",
      "icons": [
        {
          "src": "icons/inventory-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "التقارير",
      "short_name": "تقارير",
      "description": "عرض تقارير المبيعات",
      "url": "/?action=reports",
      "icons": [
        {
          "src": "icons/reports-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+grocery",
      "url": "/?handler=%s"
    }
  ],
  "share_target": {
    "action": "/share-receipt",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "receipt",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  }
}
